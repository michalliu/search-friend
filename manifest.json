{
  "name": "谷歌搜索助手",
  "version": "3.7",
  "manifest_version": 2,
  "description": "谷歌搜索增强与优化工具",
  "permissions": [
    "webRequest",
    "*://www.google.com/*",
    "*://www.google.com.hk/*",
    "notifications"
  ],
  "background": {
    "scripts": [
      "/scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://www.google.com/search*",
        "*://www.google.com.hk/search*",
        "*://61.219.131.88/search*"
      ],
      "js": [
        "/scripts/sizzle.js",
        "/scripts/searchResultOptimizer.js"
      ]
    },{
      "run_at": "document_end",
      "matches": [
        "*://www.google.com/blank.html",
        "*://www.google.com.hk/blank.html",
        "*://61.219.131.88/blank.html"
      ],
      "js": [
        "/scripts/sizzle.js",
        "/scripts/searchResultOptimizerImageFrame.js"
      ],
      "all_frames":true
	}
  ]
}

{
  "name": "谷歌搜索助手",
  "version": "2.3",
  "manifest_version": 2,
  "description": "谷歌搜索增强与优化工具",
  "permissions": [
    "webRequest",
    "http://www.google.com/*",
    "http://www.google.com.hk/*",
    "notifications"
  ],
  "background": {
    "scripts": [
      "/scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://www.google.com/search*",
        "*://www.google.com.hk/search*",
        "*://www.google.com/",
        "*://www.google.com.hk/"
      ],
      "js": [
        "/scripts/sizzle.js",
        "/scripts/searchResultOptimizer.js"
      ]
    }
  ]
}
